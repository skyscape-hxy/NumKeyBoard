<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn1"
            style="@style/num_key_board"
            android:text="1" />

        <TextView
            android:id="@+id/btn2"
            style="@style/num_key_board"
            android:text="2" />

        <TextView
            android:id="@+id/btn3"
            style="@style/num_key_board"
            android:text="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn4"
            style="@style/num_key_board"
            android:text="4" />

        <TextView
            android:id="@+id/btn5"
            style="@style/num_key_board"
            android:text="5" />

        <TextView
            android:id="@+id/btn6"
            style="@style/num_key_board"
            android:text="6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn7"
            style="@style/num_key_board"
            android:text="7" />

        <TextView
            android:id="@+id/btn8"
            style="@style/num_key_board"
            android:text="8" />

        <TextView
            android:id="@+id/btn9"
            style="@style/num_key_board"
            android:text="9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn0"
            style="@style/num_key_board"
            android:text="0" />

        <ImageView
            android:id="@+id/back"
            style="@style/num_key_board"
            android:layout_weight="2"
            android:src="@drawable/ic_delete"/>


    </LinearLayout>
</LinearLayout>